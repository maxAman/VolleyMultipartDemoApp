<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/each_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:padding="8dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@android:color/darker_gray"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/each_option_image_preview"
                android:background="@android:color/white"
                android:layout_width="140dp"
                android:layout_margin="3dp"
                android:layout_height="140dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="Selected File"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/each_option_name_tv"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="12dp"
                android:text="No File Selected"
                android:layout_height="25dp" />

            <Button
                android:id="@+id/each_option_gallery_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:onClick="onCLickOpenGallery"
                android:text="Pick from gallery" />

            <Button
                android:id="@+id/each_option_camera_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:onClick="onCLickOpenCamera"
                android:text="Pick from camera" />

            <Button
                android:id="@+id/each_option_Reset"
                android:layout_width="66dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:onClick="onCLickResetImageView"
                android:text="Reset" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/each_option_delete_option"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/close"
            android:textColor="@android:color/white" />

    </LinearLayout>

</android.support.v7.widget.CardView>